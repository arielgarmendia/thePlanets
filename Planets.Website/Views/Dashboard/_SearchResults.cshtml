@model DashboardPageData

<script>
    $(document).ready(function () {
        $('#datatable1').dataTable();

        @if (Model != null && Model.Message != null && Model.Message != "")
        {
            <text>
                toastError();
            </text>
        }
    });
</script>
    <div id="snackbar">
        @if (Model != null && Model.Message != null && Model.Message != "")
        {
            <text>@Model.Message</text>
        }
    </div>

    <label>Choose a Date Range:</label>
    <table border="0" cellspacing="5" cellpadding="5">
        <tbody>
            <tr>
                <td>
                    From
                </td>
                <td>
                    <div class="input-daterange travel-date-group">
                        <div class="input-group">
                            <input type="text" id="min" name="min" class="form-control tleft format today" placeholder="DD-MM-YYYY" />
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="icon-calendar2"></i></div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    To
                </td>
                <td>
                    <div class="input-daterange travel-date-group">
                        <div class="input-group">
                            <input type="text" id="max" name="max" class="form-control tleft format today" placeholder="DD-MM-YYYY" />
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="icon-calendar2"></i></div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="table-editable">
    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Planet</th>
                <th>Asteroid</th>
                <th>Date</th>
                <th>Diameter</th>
                <th>Velocity</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Result != null && Model.Result.Any())
            {
                foreach (var asteroid in Model.Result)
                {
                    <tr>
                        <td class="pt-3-half">@asteroid.Planet</td>
                        <td class="pt-3-half">@asteroid.Name</td>
                        <td class="pt-3-half">@asteroid.Date.ToString("yyyy-MM-dd")</td>
                        <td class="pt-3-half">@asteroid.Diameter.ToString("N2") Kms</td>
                        <td class="pt-3-half">@asteroid.Velocity.ToString("N2") Km/h</td>
                    </tr>
                }
            }
        </tbody>
    </table>